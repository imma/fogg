#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"
  source normalize

  if [[ "$#" -gt 0 ]]; then
    echo "ERROR: this command doesn't take arguments" 1>&2
    return 1
  fi

  local pth_config="$(pwd -P . | sed "s#$(cd -P . && git rev-parse --show-toplevel)/##" | perl -pe 's{/+}{_}g')"

  case "$pth_config" in
    *_*_*_*)
      set -- service \
        "$(echo "$pth_config" | cut -d_ -f2)" \
        "$(echo "$pth_config" | cut -d_ -f3)" \
        "${pth_config##*_}"
      ;;
    *_*_*)
      set -- app \
        "$(echo "$pth_config" | cut -d_ -f2)" \
        "${pth_config##*_}"
      ;;
    *_peer*)
      set -- peering_net_stag_prod \
        "${pth_config##*_}"
      ;;
    *_*)
      set -- env \
        "${pth_config##*_}"
      ;;
    *)
      set -- org
      ;;
  esac
  
  fogg gen "$@"
}

source sub "$BASH_SOURCE" "$@"
